<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_20ssp"
    android:background="@drawable/rounded_dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20ssp"
        android:src="@drawable/sad_emoji" />

    <com.iambedant.text.OutlineTextView
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_5ssp"
        android:maxLines="2"
        android:text="@string/emojinotCreated"
        android:textColor="@color/light_yellow"
        android:textSize="@dimen/_15ssp"
        app:outlineColor="@color/black"
        app:outlineWidth="0.5" />

    <RelativeLayout
        android:id="@+id/card_create_new"
        style="@style/buttonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_10ssp"
        android:layout_width="@dimen/_200sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/btn_bg"/>

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/createNew" />


    </RelativeLayout>


</LinearLayout>