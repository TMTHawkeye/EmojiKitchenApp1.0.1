<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White layer at the bottom -->

    <!--white base-->
    <item
        android:bottom="@dimen/_1ssp"
        android:left="@dimen/_1ssp"
        android:right="@dimen/_1ssp"
        android:top="@dimen/_2ssp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_50ssp"/>
        </shape>
    </item>

    <!-- Dark Yellow layer on top -->
    <item
        android:bottom="@dimen/_3ssp"
        android:left="@dimen/_3ssp"
        android:top="@dimen/_1ssp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/dark_yellow"
                android:centerColor="@color/normal_yellow"
                android:startColor="@color/light_yellow"
                android:type="linear" />
            <corners android:radius="@dimen/_50ssp"/>
        </shape>
    </item>


    <!--shine effect-->
    <item
        android:left="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <gradient
                android:centerX="10%"
                android:centerY="10%"
                android:gradientRadius="@dimen/_20ssp"
                android:startColor="#99FFFFFF"
                android:type="radial" />
        </shape>
    </item>



</layer-list>