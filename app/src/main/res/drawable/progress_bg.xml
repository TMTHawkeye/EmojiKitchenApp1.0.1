<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define your progress drawable here -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_30ssp" />
            <solid android:color="@color/light_blue" /> <!-- Change this line to set the color to blue -->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_30ssp"/>
                <solid android:color="@color/dark_yellow" />
            </shape>
        </clip>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/_30ssp" />
            <stroke
                android:width="@dimen/_4sdp"
                android:color="@color/white" />
        </shape>
    </item>
</layer-list>
